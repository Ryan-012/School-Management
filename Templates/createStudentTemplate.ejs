<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Student</title>
    <%- include('partials/links') %><%- include('partials/style') %>
  </head>
  <body class="fst-italic" style="height: 100vh">
    <%- include ('partials/navBar', {title:"Create Student"}) %>

    <main>
      <form
        action="/admin/createStudent/addStudent"
        method="post"
        class="text-light container shadow rounded mt-2 p-4 w-75"
        style="background-color: #9cc4e4"
        autocomplete="off"
      >
        <h4 class="text-center">Student iformation</h4>
        <input
          type="text"
          class="form-control w-75"
          placeholder="complete name"
          name="completeName"
          onchange="this.value = this.value.trim()"
          required
        />
        <h5>Birthdate</h5>
        <div class="input-group w-75">
          <input
            placeholder="MM"
            type="number"
            class="form-control"
            name="birthDate.month"
            max="12"
            required
          />
          <input
            placeholder="DD"
            type="number"
            class="form-control"
            name="birthDate.day"
            max="31"
            required
          />
          <input
            placeholder="YYYY"
            type="number"
            class="form-control"
            name="birthDate.year"
            required
          />
        </div>
        <h5>Class</h5>
        <div class="w-25">
          <input type="text" class="form-control w-25" name="class" required />
        </div>
        <h5>Login information</h5>
        <div class="input-group">
          <input
            class="form-control"
            type="email"
            name="login.email"
            onchange="this.value = this.value.trim()"
            placeholder="email address"
            required
          />

          <input
            class="form-control"
            type="text"
            name="login.password"
            onchange="this.value = this.value.trim()"
            placeholder="password"
            required
          />
        </div>

        <h4 class="text-center">Responsible information</h4>
        <input
          type="text"
          placeholder="complete name"
          name="responsible.completeName"
          onchange="this.value = this.value.trim()"
          class="form-control"
          required
        />
        <h5>Contact information</h5>
        <div class="input-group w-50">
          <input
            type="number"
            name="responsible.telephoneNumber.ddd"
            placeholder="ddd"
            class="form-control"
            required
          />
          <input
            type="number"
            name="responsible.telephoneNumber.number"
            placeholder="number"
            class="form-control"
            required
          />
        </div>
        <input
          type="email"
          name="responsible.email"
          placeholder="email address"
          onchange="this.value = this.value.trim()"
          class="form-control w-50 mt-2"
          required
        />
        <% if(error){ %>

        <h5 class="text-danger text-center">*Email already exists</h5>
        <% } %>
        <div class="justify-content-center d-flex mt-2">
          <button
            type="submit"
            class="btn btn-light d-flex me-2"
            style="color: #9cc4e4"
          >
            Create
          </button>
          <a
            class="btn btn-danger d-flex"
            href="/admin/login/?user=admin&password=123456 "
          >
            Return
          </a>
        </div>
      </form>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
