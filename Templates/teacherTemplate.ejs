<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partials/links') %> <%- include('partials/style') %>

    <title>Teacher Area</title>
  </head>
  <body class="fst-italic" style="height: 100vh">
    <%- include('partials/navBarTeacher', {title:"Teacher Area"}) %> <%-
    include('partials/footer') %>

    <main
      style="transform: translateY(25vh); background-color: #9cc4e4"
      class="shadow rounded flex-column container p-3 d-flex justify-content-center w-75"
    >
      <h3 class="m-0 mt-1 text-light text-center">Dashboard</h3>
      <div class="d-flex justify-content-center mt-2">
        <a
          href="/teacher/info/?token=<%=token  %>"
          style="color: #9cc4e4"
          class="w-25 me-2 btn btn-light flex-column d-flex"
        >
          <span class="material-symbols-outlined"> contact_mail </span>
          Info</a
        >

        <% classes.forEach(item=> {%>

        <a
          href="/teacher/class/?token=<%=token  %>&class=<%=item  %>"
          style="color: #9cc4e4"
          class="w-25 me-2 btn btn-light flex-column d-flex"
          ><span class="material-symbols-outlined">school</span> <%=item %>
        </a>

        <% }) %>

        <a
          href="/teacher/myMessages/?token=<%=token  %>"
          style="color: #9cc4e4"
          class="w-25 me-2 btn btn-light flex-column d-flex"
        >
          <span class="material-symbols-outlined"> chat </span>
          Messages</a
        >
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
