<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partials/links') %> <%- include('partials/style') %>
    <title>Edit Student</title>
  </head>
  <body class="vh-100 fst-italic">
    <%- include('partials/navBar', {title:"Edit Student"}) %>
    <main>
      <form
        action="/admin/manageStudents/edit/<%=student._id  %>"
        method="post"
        id="form"
        style="background-color: #9cc4e4"
        autocomplete="off"
        class="text-light container shadow rounded my-2 p-3 w-75"
      >
        <h4 class="text-center">Student iformation</h4>
        <input
          type="text"
          class="form-control w-75"
          placeholder="complete name"
          name="completeName"
          value="<%=student.completeName  %>"
          onchange="this.value = this.value.trim()"
          id="completeName"
          required
        />
        <h5>Birthdate</h5>
        <div class="input-group w-75">
          <input
            placeholder="MM"
            type="number"
            class="form-control"
            name="birthDate.month"
            value="<%=student.birthDate.month  %>"
            max="12"
            required
          />

          <input
            placeholder="DD"
            type="number"
            class="form-control"
            name="birthDate.day"
            max="31"
            value="<%=student.birthDate.day  %>"
            required
          />
          <input
            placeholder="YYYY"
            type="number"
            class="form-control"
            name="birthDate.year"
            value="<%=student.birthDate.year  %>"
            required
          />
        </div>
        <h5>Class</h5>
        <div class="w-25">
          <input
            type="text"
            class="form-control w-25"
            name="class"
            required
            value="<%=student.class  %>"
          />
        </div>
        <h5>Login information</h5>
        <div class="input-group">
          <input
            class="form-control"
            type="email"
            name="login.email"
            placeholder="email address"
            value="<%=student.login.email  %>"
            onchange="this.value = this.value.trim()"
            required
          />
          <input
            class="form-control"
            type="text"
            name="login.password"
            placeholder="password"
            onchange="this.value = this.value.trim()"
          />
        </div>
        <h4 class="text-center">Responsible information</h4>
        <input
          type="text"
          placeholder="complete name"
          name="responsible.completeName"
          class="form-control"
          value="<%=student.responsible.completeName  %>"
          onchange="this.value = this.value.trim()"
          required
        />
        <h5>Contact information</h5>
        <div class="input-group w-50">
          <input
            type="text"
            name="responsible.telephoneNumber.ddd"
            placeholder="ddd"
            class="form-control"
            value="<%=student.responsible.telephoneNumber.ddd%>"
            required
          />
          <input
            type="text"
            name="responsible.telephoneNumber.number"
            placeholder="number"
            class="form-control"
            value="<%=student.responsible.telephoneNumber.number%>"
            required
          />
        </div>
        <input
          type="email"
          name="responsible.email"
          placeholder="email address"
          class="form-control w-50 mt-2"
          value="<%=student.responsible.email%>"
          onchange="this.value = this.value.trim()"
          required
        />
        <div class="justify-content-center d-flex mt-2">
          <button
            type="submit"
            class="btn btn-light d-flex me-2"
            style="color: #9cc4e4"
          >
            Save
          </button>
          <a
            class="btn btn-danger d-flex"
            href="/admin/manageStudents/?token=<%=token  %>"
          >
            Return
          </a>
        </div>
      </form>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
