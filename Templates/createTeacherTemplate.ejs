<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Teacher</title>
    <%- include("partials/links") %> <%- include('partials/style') %>
  </head>
  <body class="fst-italic" style="height: 100vh">
    <%- include ('partials/navBar', {title:"Create Teacher"}) %>

    <main>
      <form
        action="/admin/createTeacher/addTeacher"
        method="post"
        autocomplete="off"
        class="text-light container shadow rounded my-2 p-3 w-75"
        style="background-color: #9cc4e4"
      >
        <h4 class="text-center">Teacher iformation</h4>
        <input
          type="text"
          class="form-control w-75"
          placeholder="complete name"
          onchange="this.value = this.value.trim()"
          name="completeName"
          required
        />
        <h5>Birthdate</h5>
        <div class="input-group w-75">
          <input
            placeholder="MM"
            type="number"
            class="form-control"
            name="birthDate.month"
            id="month"
            max="12"
            required
          />
          <input
            placeholder="DD"
            type="number"
            class="form-control"
            name="birthDate.day"
            id="day"
            max="31"
            required
          />
          <input
            placeholder="YYYY"
            type="number"
            class="form-control"
            name="birthDate.year"
            required
          />
        </div>
        <h5>Login information</h5>
        <div class="input-group">
          <input
            class="form-control"
            type="email"
            name="login.email"
            onchange="this.value =
          this.value.trim()"
            placeholder="email address"
            required
          />
          <input
            class="form-control"
            type="text"
            name="login.password"
            onchange="this.value =
          this.value.trim()"
            placeholder="password"
            required
          />
        </div>

        <h5>Telephone</h5>
        <div class="input-group w-50">
          <input
            type="number"
            name="telephoneNumber.ddd"
            placeholder="ddd"
            class="form-control"
            required
          />
          <input
            type="number"
            name="telephoneNumber.number"
            placeholder="number"
            class="form-control"
            required
          />
        </div>
        <h5>School discipline</h5>
        <select class="form-select w-50" name="schoolDiscipline" required>
          <option selected disabled value="">choose...</option>
          <option value="portuguese">Portuguese</option>
          <option value="math">Math</option>
          <option value="history">History</option>
          <option value="biology">Biology</option>
          <option value="geography">Geography</option>
          <option value="chemistry">Chemistry</option>
          <option value="physics">Physics</option>
          <option value="english">English</option>
        </select>
        <h5>Classes</h5>
        <div id="classes" class="w-25 d-flex">
          <input
            type="number"
            name="classes"
            class="w-25 form-control"
            required
          />
        </div>
        <a onclick="addClass()" class="btn p-0">
          <span class="material-symbols-outlined"> add </span>
        </a>
        <a onclick="deleteClass()" class="btn p-0">
          <span class="material-symbols-outlined"> delete </span>
        </a>
        <% if(error){ %>

        <h5 class="text-danger text-center">*Email already exists</h5>
        <% } %>
        <div class="justify-content-center d-flex mt-2">
          <button
            type="submit"
            class="btn btn-light d-flex me-2"
            style="color: #9cc4e4"
          >
            Create
          </button>
          <a
            class="btn btn-danger d-flex"
            href="/admin/login/?user=admin&password=123456 "
          >
            Return
          </a>
        </div>
      </form>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
      crossorigin="anonymous"
    ></script>
    <script>
      let classes = document.getElementById("classes");
      function addClass() {
        if (classes.children.length <= 3) {
          classes.innerHTML += ` <input
            type="number"
            name="classes"
            class="form-control w-25 "
            required
          />`;
        }
      }
      function deleteClass() {
        if (classes.children.length >= 2) {
          classes.removeChild(classes.lastChild);
        }
      }
    </script>
  </body>
</html>
